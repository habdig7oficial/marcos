<body>
    <div class="container">
        <h1 class="text-center">
            Cadastro de Conteúdos
        </h1>

        <form action="/forms" method="post">
            <label for="estilo">Estilo</label>
            <select required name="estilo" id="">
                <option value="style1">Estilo 1</option>
                <option value="style2">Estilo 2</option>
                <option value="style3">Estilo 3</option>
                <option value="style4">Estilo 4</option>
                <option value="style5">Estilo 5</option>
                <option value="style5">Estilo 6</option> 
            </select>

            <label for="imagem">Imagem</label>
            <input required class="mb-3" type="file" name="image" id="preview" accept="image/*">

            <label for="titulo">Título</label>
            <input required name="titulo" type="text">

            <label for="texto">Texto</label>
            <textarea required name="texto" id="" cols="30" rows="4"></textarea>

            <input class="mt-5" type="submit" value="Enviar">


        </form>

    </div>
</body>
